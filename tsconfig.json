{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "target": "ES5",  
    "module": "ESNext",  
    "declaration": true,  
    "outDir": "./dist",  
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "lib": [
        "dom",
        "es2015"
    ],
    "jsx": "react-jsx",
    "typeRoots":["./typings/"]
  }
}
